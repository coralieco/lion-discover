
<!-- Start of the banner -->
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path 'lion_banner.png', id: 'banner'%>);">
  <div class="banner-content">
    <h1>Lion Discover</h1>
    <span id="banner-typed-text" class = "typed_style"></span>
    <br>
    <a class="btn btn-primary btn-lg", href="#discover", id ="button-style">Découvrir</a>
  </div>
</div>
<!-- End of the banner -->

<!-- Beginning of the presentation block -->
<div class="wrapper", id="description">
  <div class="container">
    <div class="row">
      <h3 class= "title_presentation">A propos</h3>
      <div class="content-all">
        <div class="presentation">
          <div class="content-left">
            <ul>
              <li><i class="fas fa-search"></i>Découvrez facilement votre future startup</li>
              <li><i class="far fa-envelope"></i>Une vidéo pour découvrir le quotidien des employés</li>
              <li><i class="fas fa-shopping-cart"></i>Un moyen simple de rester en contact avec la startup qui vous fait rêver</li>
            </ul>
          </div>
          <div class="content-right">
            <%= image_tag "img_wrapper.gif", id: 'img-wrapper'%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End of the presentation block-->

